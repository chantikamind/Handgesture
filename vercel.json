{
  "version": 2,
  "buildCommand": "pip install -r api/requirements.txt",
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/templates/(.*)",
      "destination": "/templates/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/app.py"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "VERCEL_ENV": "production"
  }
}
